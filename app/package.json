{
  "name": "ft_transcendence",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "services/authentication",
    "services/game-engine",
    "services/game-orchestration",
    "services/gateway"
  ],
  "scripts": {
    "build:all": "npm run build --workspaces",
    "start:all": "concurrently --names \"frontend,auth,game-engine,game-orch,gateway\" -c \"blue,green,red,yellow,magenta\" \"npm:start:frontend\" \"npm:start:authentication\" \"npm:start:game-engine\" \"npm:start:game-orchestration\" \"npm:start:gateway\"",
    "start:frontend": "npm run start -w @ft_transcendence/frontend",
    "start:authentication": "npm run start -w @ft_transcendence/authentication",
    "start:game-engine": "npm run start -w @ft_transcendence/game-engine",
    "start:game-orchestration": "npm run start -w @ft_transcendence/game-orchestration",
    "start:gateway": "npm run start -w @ft_transcendence/gateway",
    "watch:all": "concurrently --names \"frontend,auth,game-engine,game-orch,gateway\" -c \"blue,green,red,yellow,magenta\" \"npm:watch:frontend\" \"npm:watch:authentication\" \"npm:watch:game-engine\" \"npm:watch:game-orchestration\" \"npm:watch:gateway\"",
    "watch:frontend": "npm run dev -w @ft_transcendence/frontend",
    "watch:authentication": "npm run watch -w @ft_transcendence/authentication",
    "watch:game-engine": "npm run watch -w @ft_transcendence/game-engine",
    "watch:game-orchestration": "npm run watch -w @ft_transcendence/game-orchestration",
    "watch:gateway": "npm run watch -w @ft_transcendence/gateway",
    "clean": "npm run clean --workspaces"
  },
  "dependencies": {
    "@babylonjs/gui": "^8.38.0",
    "chalk": "^5.6.2",
    "fastify": "^5.6.1"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "concurrently": "^9.2.1",
    "sort-package-json": "^3.4.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
