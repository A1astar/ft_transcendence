{
    "name": "frontend",
    "private": true,
    "type": "module",
    "scripts": {
        "dev:ts": "tsc -w",
        "dev:css": "tailwindcss -i src/styles/main.css -o styles/output.css --watch",
        "dev": "npm-run-all -p dev:*",
        "build:ts": "tsc -b",
        "build:css": "tailwindcss -i src/styles/main.css -o styles/output.css --minify",
        "build": "npm-run-all build:*",
        "serve": "npx http-server -c-1 ."
    },
    "devDependencies": {
        "@tailwindcss/cli": "^4.1.14",
        "tailwindcss": "^4.1.14",
        "typescript": "^5.9.3",
        "npm-run-all": "^4.1.5",
        "http-server": "^14.1.1"
    }
}
