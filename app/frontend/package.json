{
  "name": "frontend",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm-run-all -p tw ts serve",
    "tw": "tailwindcss -i ./styles/input.css -o ./styles/output.css --watch",
    "ts": "tsc -w",
    "serve": "http-server . -c-1 -p 1312 --ssl --cert certs/self.crt --key certs/self.key",
    "build": "tsc && tailwindcss -i ./styles/input.css -o ./styles/output.css --minify"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.16",
    "http-server": "^14.1.1",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.9.3",
    "vite": "^7.1.12"
  }
}
